<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd">
    <dialogMode width="AUTO"/>
    <layout>
        <vbox id="registrationBox">
            <hbox id="loginBox">
                <label id="loginLabel" value="Enter your user name"/>
                <textField id="loginTextField"/>
            </hbox>
            <hbox id="passwordBox">
                <label id="passwordLabel" value="Enter password"/>
                <textField id="passwordTextField"/>
            </hbox>
            <hbox id="nameBox">
                <label id="nameLabel" value="Enter password"/>
                <textField id="nameTextField"/>
            </hbox>
            <label id="errorLabel" css="color:red"/>
            <hbox id="buttonBox">
                <button id="okButton" caption="Ok" invoke="onOkButton"/>
                <button id="cancelButton" caption="Cancel" invoke="onCancelButton"/>
            </hbox>
        </vbox>
    </layout>
</window>